<% provide(:title, "Edit") %>
<h1>お酒情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @alcohol, local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :"ラベル画像", class: "label-edit" %>
    　<%= f.file_field :image %>
      
      <%= f.label :"名前", class: "label-edit" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :"値段", class: "label-edit" %>
      <%= f.text_field :price, class: "form-control" %>
      
       <%= f.label :"お酒の場所", class: "label-edit" %>
      <%= f.file_field :placephoto %>
      
      
      <%= f.label :"種類", class: "label-edit" %>
      <%= f.text_field :kind, class: "form-control" %>
      
      <%= f.label :"特徴", class: "label-edit" %>
      <%= f.text_field :character, class: "form-control" %>

      
      <%= f.submit  "更新", class: "btn btn-primary btn-block btn-alchol-edit" %>
    <% end %>
  </div>
</div>